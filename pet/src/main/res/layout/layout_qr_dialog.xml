<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:background="@drawable/qr_bg_shape"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="8dp"
                android:text="点击查看付款码数字"
                android:textColor="@color/color_999999"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="250dp"
                android:layout_height="82dp"
                android:src="@drawable/icon_barcode" />

            <ImageView
                android:layout_width="129dp"
                android:layout_height="129dp"
                android:layout_marginTop="13dp"
                android:src="@drawable/icon_qr" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="14dp"
                android:background="@color/color_eeeeee" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="14dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_bank"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_bank" />

                <TextView
                    style="@style/text_shouyi"
                    android:layout_marginLeft="6dp"
                    android:layout_toRightOf="@+id/iv_bank"
                    android:text="招商银行储蓄卡(2457)" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrows_gray" />
            </RelativeLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="24dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/icon_close" />
    </LinearLayout>

</RelativeLayout>