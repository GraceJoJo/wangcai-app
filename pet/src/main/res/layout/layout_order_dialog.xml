<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_dialog">
    <!-- 111111111   -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff"
            android:orientation="horizontal"
            android:paddingBottom="17dp"
            android:paddingTop="17dp">

            <LinearLayout
                android:id="@+id/ll_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cb_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:text="全部"
                    android:textColor="@drawable/text_color_tab_selector2"
                    android:textSize="13sp" />

                <View
                    android:id="@+id/view_all"
                    android:layout_width="20dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/color_ef4034"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cb_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:text="待支付"
                    android:textColor="@drawable/text_color_tab_selector2"
                    android:textSize="13sp" />

                <View
                    android:id="@+id/view_pay"
                    android:layout_width="20dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/color_ef4034"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_shouhuo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cb_shouhuo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:text="待收获"
                    android:textColor="@drawable/text_color_tab_selector2"
                    android:textSize="13sp" />

                <View
                    android:id="@+id/view_shouhuo"
                    android:layout_width="20dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/color_ef4034"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_pingjia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cb_pingjia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:text="待评价"
                    android:textColor="@drawable/text_color_tab_selector2"
                    android:textSize="13sp" />

                <View
                    android:id="@+id/view_pingjia"
                    android:layout_width="20dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/color_ef4034"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_tuihuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cb_tuihuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:text="退换"
                    android:textColor="@drawable/text_color_tab_selector2"
                    android:textSize="13sp" />

                <View
                    android:id="@+id/view_tuihuan"
                    android:layout_width="20dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/color_ef4034"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_eeeeee"></View>
        <ScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_alignParentBottom="true"
            android:descendantFocusability="blocksDescendants"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shouyi_shape"
                android:orientation="vertical"
                android:paddingTop="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="0dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingHorizontal="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingBottom="0dp">

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/recyclerView"
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:nestedScrollingEnabled="false"
                                android:paddingBottom="60dp" />
                            <ImageView
                                android:id="@+id/iv_list"
                                android:src="@drawable/order_item_long"
                                android:layout_width="match_parent"
                                android:scaleType="fitXY"
                                android:paddingBottom="50dp"
                                android:layout_height="wrap_content">
                            </ImageView>
                        </RelativeLayout>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
    <!-- 111111111   -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_eeeeee"></View>
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/color_ffffff"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_333333"
            android:textSize="16sp" />

    </LinearLayout>

</RelativeLayout>