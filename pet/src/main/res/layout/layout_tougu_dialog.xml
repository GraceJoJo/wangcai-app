<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/transparent_dialog">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:listSelector="@android:color/transparent"></android.support.v7.widget.RecyclerView>"

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="327dp"
        android:background="@drawable/shouyi_shape"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="34dp"
            android:layout_marginTop="36dp"
            android:background="@android:color/holo_red_light" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="36dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:background="@android:color/holo_red_light" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_audio"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginTop="50dp"
                    android:background="@android:color/holo_red_light" />

                <TextView
                    style="@style/text_shouyi"
                    android:layout_marginTop="12dp"
                    android:text="按住 说话" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_clear"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_alignParentRight="true"
                android:background="@android:color/holo_red_light" />

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_close"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="取消"
            android:background="@color/white"
            android:textColor="@color/color_333333"
            android:textSize="16dp" />

    </LinearLayout>

</LinearLayout>